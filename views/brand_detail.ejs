<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale="1">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
    <%- include('layout') -%>
    <h1>Brand: <%= brand.name %></h1>
    <% if (brand_items.length) { %>
        <dl>
            <% brand_items.forEach(item => { %>
                <dt>
                    <a href="<%= item.url %>"><%= item.title %></a>
                    
                </dt>
                
            <% }) %>
            <% } else { %>
                <li>This genre has no books.</li>
            </dl>
    <% } %>

  
     
</body>
</html>